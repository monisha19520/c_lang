#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int a,b,c;
    scanf("%d\n%d\n%d\n",&a,&b,&c);
    printf("x-coordinate:%d\ny-coordinate:%d\nLength:%d\nCentre of the ground is at (%d,%d)",a,b,c,a+(c/2),b+(c/2));

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
