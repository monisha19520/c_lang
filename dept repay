#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int a,r,y;
    scanf("%d\n%d\n%d\n",&a,&r,&y);
    float i,e,d,f;
    f=(a*r*y)/100;
    e=a+f;
    d=0.02*f;
    i=e-d;
    printf("%.2f\n%.2f\n%.2f\n%.2f\n",f,e,d,i);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}
